{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
      "declaration": true,
      "emitDeclarationOnly": true,
      "outDir": "dist",
      "rootDir": "src",
      "module": "NodeNext",
      "target": "ES2020",
      "moduleResolution": "NodeNext",
      "lib": ["ES2020", "DOM"],
      "esModuleInterop": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "allowJs": true
  },
  "include": ["src/**/*.ts", "src/**/*.json"],
  "exclude": ["node_modules", "dist"]
}