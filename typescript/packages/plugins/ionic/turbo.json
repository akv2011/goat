{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "inputs": [
        "src/**/*.{ts,tsx}",
        "tsup.config.ts",
        "tsconfig.json",
        "../../core/src/**/*.{ts,tsx}",
        "../../wallets/evm/src/**/*.{ts,tsx}"
      ],
      "dependsOn": ["^build"],
      "outputs": [
        "dist/**",
        "*.tsbuildinfo"
      ]
    }
  }
}